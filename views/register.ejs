<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', {title: 'Register'} ) %>
<body>
  <%- include('partials/header.ejs') %>

  <main id="register-form">

    <form action="/" method="get" class="register">

      <div class="text-field">
        <input type="text" name="nombre" placeholder="Nombre y apellidos" required>
      </div>
      <div class="text-field">
        <input type="text" name="usuario" placeholder="Nombre de usuario" required>
      </div>

      <div class="photo">
        <h3>Sube tu foto de perfil</h3>
        <input type="file" name="foto" multiple>
      </div>

      <div class="born-date">
        <h3>Fecha de nacimiento</h3>
        <input type="date" name="nacimiento">
      </div>
     
      <div class="text-field">
        <input type="text" name="domicilio" placeholder="Direccion">
      </div>

      <div class="user-profile">
        <h3>Perfil del usuario</h3>
        <div class="option-container">
          <div class="seller">
            <label for="vendedor">Vendedor</label>
            <input type="radio" name="perfil" value="vendedor" id="vendedor">
          </div>
          <div class="buyer">
            <label for="comprador">Comprador</label>
            <input type="radio" name="perfil" value="comprador" id="comprador">
          </div>
        </div>
        
      </div>

      <div class="interest"> 
        <h3>Intereses</h3> 
        <div>
          <input type="checkbox" name="electro" id="electro">
        <label for="electro">Electro</label>
        </div>
        <div>
          <input type="checkbox" name="moda" id="moda">
        <label for="moda">Moda</label>
        </div>
        <div>
          <input type="checkbox" name="hogar" id="hogar">
        <label for="hogar">Hogar</label>
        </div>
        <div>
          <input type="checkbox" name="jugeteria" id="jugeteria">
        <label for="jugeteria">Jugeteria</label>
        </div>
        <div>
          <input type="checkbox" name="vida sana" id="vida sana">
        <label for="vida sana">Vida sana</label>
        </div>
      </div>
      <div class="text-field">
        <input type="password" name="contrasenia" placeholder="Contrasenia" required>
      </div>
      <div class="text-field">
        <input type="password" name="contraseniaConfirmar" placeholder="ConfirmarContrasenia" required>
      </div>
        <div class="buttons">
          <a href="/home"><button class="submit" type="submit">Enviar</button></a>
        <button class="reset" type="reset">Borrar</button>
        </div>
        
  
    </form>
  </main>

  <%- include('partials/footer.ejs') %>
</body>
</html>